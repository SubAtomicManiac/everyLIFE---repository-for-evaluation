<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/row_margin_small"
              android:layout_marginStart="@dimen/row_margin"
              android:layout_marginEnd="@dimen/row_margin">

// TODO A: implement the UI element to match design.png
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/task_type"
            android:layout_width="@dimen/image_length"
            android:layout_height="@dimen/image_length"
            android:layout_marginTop="@dimen/row_margin_small"/>
    <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:layout_marginStart="@dimen/image_length"/>
</LinearLayout>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/desc_margin"/>
</LinearLayout>